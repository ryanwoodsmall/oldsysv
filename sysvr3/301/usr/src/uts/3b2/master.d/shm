*FLAG	#VEC	PREFIX	SOFT	#DEV	IPL	DEPENDENCIES/VARIABLES
ox	-	shm	-	-	-	ipc
						shmsys(){nosys}
						shmexec(){}
						shmexit(){}
						shmfork(){}
						shmslp(){true}
						shmtext(){}
						shmem[SHMMNI] (%0x30)
						shmmap[SHMMNI/2+2] (%l%l)
						shminfo(%i%i%i%i%i)
						      ={SHMMAX,
							SHMMIN,
							SHMMNI,
							SHMSEG,
							SHMALL}
						

